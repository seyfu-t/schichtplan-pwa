---
const shiftTypes = ["Tagschicht", "Nachtschicht"];
const teams = ["A", "B", "C", "D"];
const selectedShift = shiftTypes[Math.floor(Math.random() * shiftTypes.length)];
const selectedTeam = teams[Math.floor(Math.random() * teams.length)];
---

<div class="slot-machine">
  <div class="slot">
    <div class="slot-content">
      <span>{selectedShift}</span>
    </div>
  </div>
  <div class="slot">
    <div class="slot-content">
      <span>{selectedTeam}</span>
    </div>
  </div>
</div>

<style>
  .slot-machine {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-top: 40px;
  }

  .slot {
    width: 100px;
    height: 100px;
    border: 2px solid #ccc;
    border-radius: 8px;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #fff;
    overflow: hidden;
    position: relative;
  }

  .slot-content {
    font-size: 20px;
    font-weight: bold;
    text-align: center;
  }
</style>
